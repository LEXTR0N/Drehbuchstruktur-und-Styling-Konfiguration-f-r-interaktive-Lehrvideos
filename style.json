{
    "monitor": {
      "aspectRatio": "16:9"
    },
    "slides": {
      "title": {
        "fontSize": "24px",
        "color": "#000000",
        "position": {
          "x": 50,
          "y": 10,
          "alignmentPoint": "center"
        }
      },
      "content": {
        "fontFamily": "Arial, sans-serif",
        "lineSpacing": "1.5",
        "color": "#333333",
        "backgroundColor": "#FFFFFF",
        "position": {
          "x": 50,
          "y": 50,
          "alignmentPoint": "center"
        }
      },
      "background": {
        "type": "solid",
        "color": "#F5F5F5",
        "image": null
      }
    },
    "teleprompter": {
      "font": {
        "fontFamily": "Courier New, monospace",
        "fontSize": "18px"
      },
      "lineHeight": "1.6",
      "highlight": {
        "color": "#FF0000",
        "background": "#FFFFE0"
      }
    },
    "quiz": {
      "questions": {
        "fontSize": "20px",
        "style": "bold",
        "spacing": "10px"
      },
      "answers": {
        "correctColor": "#00FF00",
        "incorrectColor": "#FF0000"
      },
      "position": {
        "x": 50,
        "y": 80,
        "alignmentPoint": "center"
      }
    },
    "screencasts": {
      "position": {
        "x": 5,
        "y": 5,
        "alignmentPoint": "topleft"
      }
    },
    "imagesAndGraphics": {
      "size": {
        "maxWidth": "500px",
        "maxHeight": "400px",
        "minWidth": "100px",
        "minHeight": "80px"
      },
      "alignment": "center",
      "frame": {
        "color": "#CCCCCC",
        "thickness": "2px"
      },
      "shadow": {
        "enabled": true,
        "color": "#888888",
        "offsetX": "5px",
        "offsetY": "5px",
        "blur": "10px"
      },
      "position": {
        "x": 50,
        "y": 50,
        "alignmentPoint": "center"
      }
    },
    "subtitles": {
      "font": {
        "fontFamily": "Verdana, sans-serif",
        "fontSize": "16px"
      },
      "background": {
        "color": "rgba(0, 0, 0, 0.5)"
      },
      "position": {
        "x": 50,
        "y": 95,
        "alignmentPoint": "center"
      }
    }
  }
  